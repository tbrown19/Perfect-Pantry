<div class="container padded">

  <div class="layout-row layout-xs-column">
    <div class="layout-column flex-xs flex-gt-xs-50">
      {{#paper-card as |card|}}
        {{#card.title as |title|}}
          {{#title.text as |text|}}
            {{#text.headline}}
              {{fa-icon 'shopping-cart'}} Shopping List
            {{/text.headline}}
          {{/title.text}}
          {{#card.actions class = "dashboard-card-buttons"}}
            {{#paper-button iconButton=true}}{{paper-icon "favorite"}}{{/paper-button}}
            {{#paper-button iconButton=true}}{{paper-icon "settings"}}{{/paper-button}}
            {{#paper-button iconButton=true}}{{paper-icon "share"}}{{/paper-button}}
          {{/card.actions}}
        {{/card.title}}
        {{paper-divider}}

        {{#card.content}}
          <div class="dashboard-col">
            {{dashboard-shopping-list items=model.shoppingItems}}
          </div>
          {{#each model.items as |item|}}
            {{item.name}}
            <br>
          {{/each}}
        {{/card.content}}
      {{/paper-card}}
    </div>


    <div class="layout-column flex-xs flex-gt-xs-50">
      {{#paper-card as |card|}}
        {{#card.title as |title|}}
          {{#title.text as |text|}}
            {{#text.headline}}
              {{fa-icon 'clock-o'}} Recent Purchases
            {{/text.headline}}
          {{/title.text}}
          {{#card.actions class = "dashboard-card-buttons"}}
            {{#paper-button iconButton=true}}{{paper-icon "favorite"}}{{/paper-button}}
            {{#paper-button iconButton=true}}{{paper-icon "settings"}}{{/paper-button}}
            {{#paper-button iconButton=true}}{{paper-icon "share"}}{{/paper-button}}
          {{/card.actions}}
        {{/card.title}}
        {{paper-divider}}
        {{#card.content}}
        {{/card.content}}
      {{/paper-card}}
    </div>
  </div>

</div>