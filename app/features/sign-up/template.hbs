<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class='page-header'>
          <h1 class="sign-in-header">Sign Up</h1>
      </div>

      {{input type="text"  class='form-control sign-in-text'  value=firstName placeholder="Name"}}

      {{input type='text' class='form-control sign-in-text' value=email placeholder='email'}}

      {{input type='password' class='form-control sign-in-text' value=password placeholder='password'}}

      <button class='btn btn-default center-block' id="sign-up-button" {{action 'signUp' firstName email password}}>
        {{fa-icon 'user-plus'}} Sign Up
      </button>
      </div>
  </div>
</div>