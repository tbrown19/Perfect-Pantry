{{#paper-checkbox name="itemCheckbox" class = "shopping-list-checkbox" value=isCheckedComputed onChange=(action (mut isChecked))}}
  <div class = "shopping-list-information">
    <strong>
      {{shoppingItem.quantity}}
    </strong>
    {{shoppingItem.name}}
    <p class = "shopping-item-subtext">
      <strong>
        Added On:
      </strong>
      {{shoppingItem.formattedDate}}
      <br>

      <strong>
        Added By:
      </strong>
      {{shoppingItem.shoppingList.user.firstName}}
    </p>



  </div>

{{/paper-checkbox}}

{{#paper-button  class = "pull-right"}}
  <span class="select-all-button">{{fa-icon 'shopping-cart'}} Buy </span>
{{/paper-button}}

{{paper-divider}}