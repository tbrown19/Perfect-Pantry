{{#paper-checkbox name="itemCheckbox" class = "shopping-list-checkbox" value=isCheckedComputed
                  onChange=(action (mut isChecked))}}

	<div class="shopping-list-information">
		<strong>
			{{purchasedItem.quantity}}
		</strong>

		{{purchasedItem.name}}

		<p class="shopping-item-subtext">
			<strong>
				Added By:
			</strong>
			{{purchasedItem.purchasedList.user.firstName}}
			<strong>
				Added On:
			</strong>
			{{purchasedItem.purchasedDateFormatted}}
		</p>

	</div>

{{/paper-checkbox}}
<div class="pull-right">

	{{#paper-button onClick=(action "purchaseItem")}}
		<span class="remove-item-button">{{fa-icon 'plus'}} Consumed</span>
	{{/paper-button}}

	{{#paper-button onClick=(action "deleteItem")}}
		<span class="remove-item-button">{{fa-icon 'trash-o'}} Remove</span>
	{{/paper-button}}



</div>
{{paper-divider}}




