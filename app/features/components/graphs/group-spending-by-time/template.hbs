{{#paper-card as |card|}}
	{{#paper-toolbar class="alt-toolbar-head"}}
		{{#paper-toolbar-tools}}
			<h2>
				{{fa-icon 'users'}} {{chartHead}}
			</h2>
			<span class="flex"></span>

			{{#paper-button onClick = (action "showOptions") iconButton=true}}
				{{paper-icon "settings"}}
			{{/paper-button}}

		{{/paper-toolbar-tools}}
	{{/paper-toolbar}}

  {{#card.content}}
    {{#if chartData}}
      <div class = "chartDiv">
        {{ember-chart type='line' data=graphOptions options=CHARTOPTIONS width=200 height=300}}
      </div>
    {{else}}
	    {{resolveChartData}}
      Data Loading...
    {{/if}}

  {{/card.content}}
{{/paper-card}}

{{graphs/graph-options-modal
		showDialog = showDialog
		graphName = chartLabel
		updateGraphTimeOptions = "updateGraphTimeOptions"
		currentTimeSetting = timePeriodBasic
}}