{{#paper-card as |card|}}
  {{#card.title as |title|}}
    {{#title.text as |text|}}
      {{#text.headline}}
        {{fa-icon 'users'}} Spending breakdown by user
      {{/text.headline}}
    {{/title.text}}
    {{#card.actions class = "dashboard-card-buttons"}}
      {{#paper-button iconButton=true}}{{paper-icon "favorite"}}{{/paper-button}}
      {{#paper-button iconButton=true}}{{paper-icon "settings"}}{{/paper-button}}
      {{#paper-button iconButton=true}}{{paper-icon "share"}}{{/paper-button}}
    {{/card.actions}}
  {{/card.title}}
  {{paper-divider}}
  {{#card.content}}
    {{ember-chart type='pie' data=graphOptions width=200 height=400}}
  {{/card.content}}
{{/paper-card}}
