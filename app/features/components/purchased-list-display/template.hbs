{{#paper-card as |card|}}
  {{#card.title id = "purchased-list-header" as |title|}}
    {{#title.text as |text|}}
      {{#text.headline}}
        {{fa-icon 'cutlery'}} Pantry
      {{/text.headline}}
    {{/title.text}}
  {{/card.title}}

  {{#card.content}}
    {{#card.actions class="layout-row layout-align-start-center layout-xs-column"}}
      {{#if deleteButton}}
        <div class="flex-gt-sm-20 flex-70">
          {{#paper-button  onClick=(action "selectAllItems")}}
            <span class="select-all-button">{{fa-icon 'check-square-o'}} {{selectAllText}} All </span>
          {{/paper-button}}
        </div>
      {{/if}}

      <div class="flex-gt-sm-45 flex-70">
        <span class="sort-header">Sorting By:</span>
        {{#paper-menu offset="0 10 0 0" as |menu|}}
          {{#menu.trigger}}
            {{#paper-button}}
              <span class="sort-button"> {{sortByFormatted}} </span>
            {{/paper-button}}
          {{/menu.trigger}}
          {{#menu.content width=2 as |content|}}
            {{#each sortableProperties as |item|}}
              {{#content.menu-item  test = item onClick="selectSortProperty"}}
                <span> {{item}} </span>
              {{/content.menu-item}}
            {{/each}}
          {{/menu.content}}
        {{/paper-menu}}
      </div>


      <div class="flex-gt-sm-50 flex-70">
        <span class="sort-header">Sort Order:</span>
        {{#paper-menu offset="15 10 0 0" as |menu|}}
          {{#menu.trigger}}
            {{#paper-button}}
              <span class="sort-button"> {{sortOrder}} </span>
            {{/paper-button}}
          {{/menu.trigger}}
          {{#menu.content width=2 as |content|}}
            {{#each sortOrders as |item|}}
              {{#content.menu-item  onClick="selectSortOrder"}}
                <span> {{item}} </span>
              {{/content.menu-item}}
            {{/each}}
          {{/menu.content}}
        {{/paper-menu}}
      </div>

      {{#if deleteButton}}
        <div class="flex-70">
          {{#if checkedItems}}
            {{#paper-button class = "pull-right" onClick=(action "deleteButtonClicked")}}
              <span class="delete-button">{{fa-icon 'trash-o'}} Delete  {{itemsCheckedText}} </span>
            {{/paper-button}}
          {{else if checkAll}}
            {{#paper-button class = "pull-right" onClick=(action "deleteButtonClicked")}}
              <span class="delete-button">{{fa-icon 'trash-o'}} Delete  {{itemsCheckedText}} </span>
            {{/paper-button}}
          {{/if}}
        </div>
      {{/if}}

    {{/card.actions}}

    {{paper-divider}}

    {{#paper-list}}
      {{#each limitedPurchasedListItems as |item|}}
        {{#if item.consumed}}
        {{else}}
          {{#if checkAll}}
            {{shopping-list-item purchasedItem = item itemChecked = "itemChecked" checkAll = true}}
          {{else}}
            {{#if deteButton}}
              {{shopping-list-item purchasedItem = item itemChecked = "itemChecked" checkAll = false}}
            {{else}}
              {{dashboard-pantry-list-item purchasedItem = item}}
            {{/if}}
          {{/if}}
        {{/if}}
      {{else}}
        <h2>You don't have any items in your pantry.</h2>
        <small> Once you buy something it will show up here.</small>
      {{/each}}
    {{/paper-list}}

  {{/card.content}}


{{/paper-card}}

