{{#paper-card as |card|}}
	{{#card.title as |title|}}
		{{#title.text as |text|}}
			{{#text.headline}}{{user.firstName}} {{user.lastName}}{{/text.headline}}
		{{/title.text}}
	{{/card.title}}

	{{#card.content}}
		<div>

			<div class="userTotalSpent">Spending on items:
				<span class="numberVal">
					{{await user.spendingTotals}}
				</span>
			</div>

			<div class="userTotalSpent">Payments to others:
				<span class="numberVal">
					{{await user.paymentTotals}}
				</span>
			</div>

			<div class="userTotalSpent">Total contributions to pantry:
				<span class="numberVal">
					{{await user.contribTotals}}
				</span>
			</div>
		</div>
	{{/card.content}}

	{{#card.actions}}
		{{#paper-button}}View All Purchases{{/paper-button}}
		{{#paper-button}}View All Payments{{/paper-button}}
	{{/card.actions}}
{{/paper-card}}