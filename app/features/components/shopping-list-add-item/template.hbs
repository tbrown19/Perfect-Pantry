{{#paper-card as |card|}}

  {{#card.content}}
    <h3>New Item</h3>

    {{paper-divider}}

    {{#paper-form onSubmit=(action "addNewItems") as |form|}}
      <div class="row layout-row">
        {{form.input id = "new-shopping-list-item-qty" type="number" label="Quantity" value=quantity onChange=(action (mut quantity)) min=1 max=100 required=true}}

        {{form.input id = "new-shopping-list-item" label="Item Name" value=itemName onChange=(action (mut itemName)) required=true minlength=3}}
        <div class = "col-md-1 pull-right">
          {{#form.submit-button id = "add-new-item" fab=true raised=true primary=false disabled=form.isInvalid}}
            {{fa-icon 'plus'}}
          {{/form.submit-button}}
        </div>

      </div>
      <div class="layout-row">


      </div>
    {{/paper-form}}
  {{/card.content}}
{{/paper-card}}