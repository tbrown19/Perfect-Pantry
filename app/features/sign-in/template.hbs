<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class='page-header'>
        <h1 class="sign-in-header">Sign In</h1>
      </div>
      {{input type='text' class='form-control sign-in-text' value=email placeholder='email'}}
      {{input type='password' class='form-control sign-in-text' value=password placeholder='password'}}

        {{#if session.isWorking}}
          <button class='btn btn-default' disabled='disabled'>
            {{fa-icon 'spinner' spin=true}} Signing in...
          </button>
        {{else}}

          <button class='btn btn-default center-block' id="sign-in-button" {{action 'signIn' email password}}>
            {{fa-icon 'sign-in'}} Sign In
          </button>

      {{/if}}

    </div>
  </div>
</div>
