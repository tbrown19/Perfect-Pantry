<!--Model = user-->
<div class="layout-row layout-xs-column">
  <div class="flex-gt-sm-49 flex-70">
    {{group-spending-by-user user = model.user allUsers = model.allUsers}}
    {{user-spending-by-time user = model.user allUsers = model.allUsers}}

  </div>
  <div class="flex-gt-sm-49 flex-70">
    {{group-spending-by-time user = model.user allUsers = model.allUsers}}
  </div>

</div>


<h2>You are: {{model.user.email}} - {{model.user.firstName}} </h2>
<h2>Items you've bought</h2>
<ul>
  {{#each model.user.purchasedList.purchasedListItems as |item|}}
    <li>{{item.name}} : {{item.price}}</li>
  {{/each}}
</ul>


<div class="row">
  {{#each model.otherUsers as |user|}}
    <div class="col-md-4">
      {{#paper-card as |card|}}
        {{#card.title as |title|}}
          {{#title.text as |text|}}
            {{#text.headline}} {{user.firstName}} {{/text.headline}}
            {{#text.subhead}} {{user.email}} {{/text.subhead}}
          {{/title.text}}
          {{#title.media size="sm"}}
            <div class="card-media">Test</div>
          {{/title.media}}
        {{/card.title}}
        <h2>Items they've bought</h2>
        <ul>
          {{#each user.purchasedList.purchasedListItems as |item|}}
            <li>{{item.name}} : {{item.price}}</li>
          {{/each}}
        </ul>
        {{#card.actions}}
          {{#paper-button action="testAction"}}Action 1{{/paper-button}}
          {{#paper-button}}Action 2{{/paper-button}}
        {{/card.actions}}
      {{/paper-card}}
    </div>
  {{/each}}

</div>

